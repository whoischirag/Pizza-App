<section class="cart py-16">
  <% if(session.cart) { %>
    <div class="order container mx-auto p-5  xl:w-1/2">
      <div class="flex items-center border-b border-gray-300 pb-4">
        <img src="/img/cart-black.png" alt="" />
        <h1 class="font-bold ml-4 text-2xl">Order Summary</h1>
      </div>
      <div class="pizza-list mt-4">
        <% for(let pizza of Object.values(session.cart.items)) { %>
          <div class="flex items-center my-8">
            <img class="w-24" src="/img/<%= pizza.item.image %>" alt="<%= pizza.item.name %>" />
            <div class="ml-4 flex-1">
              <h1><%= pizza.item.name %></h1>
              <span><%= pizza.item.size %></span>
            </div>
            <span class="ml-4 flex-1"><%= pizza.qty %></span>
            <span class="font-bold text-lg">‚Çπ<%= pizza.item.price * pizza.qty %></span>
          </div>
        <% } %>
      </div>
      <hr />
      <div class="text-right py-4">
        <div>
          <span class="text-lg font-bold">Total Amount:</span>
          <span class="amount text-2xl font-bold ml-2">‚Çπ <%= session.cart.totalPrice %></span>
        </div>
        <% if(user){ %>
        <div>
          <form action="/order" method="POST" class="mt-12">
            <input class="border border-gray-400 p-2 w-1/2 mb-4" type="text" name="mobile" placeholder="Mobile number" required>
            <input class="border border-gray-400 p-2 w-1/2 mb-4" type="text" name="address" placeholder="Address" required>
            <div class="mt-6">
                <button class="btn-primary rounded-full px-6 py-2 text-white font-bold" type="submit">Order Now</button>
            </div>
        </form>
        
        </div>
        <% } else {%>
        <a href="/login" class=" inline-block cursor-pointer btn-primary px-6 py-2 rounded-full text-white font-bold mt-6" >Login to Order</a>
       <% } %>
      </div>
    </div>
  <% } else { %>
    <div class="empty-cart py-8">
      <div class="container mx-auto text-center">
        <h1 class="text-3xl font-bold mb-2">Cart Empty! üò¢</h1>
        <p class="text-gray-500 text-lg mb-12">
          Craving pizza?<br /> You‚Äôre just a click away! 
          Visit the main page to place your order now! üçïüöÄ
        </p>
        <img class="w-2/5 mx-auto" src="/img/empty-cart.png" alt="empty-cart">
        <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12">Go Back</a>
      </div>
    </div>
  <% } %>
</section>
